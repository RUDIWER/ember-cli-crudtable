
<div class="form-group">
    <label class="col-sm-2 control-label">{{record.Field}}</label>
    <div class="col-sm-10">
        {{#each option in this.record.Display}}
	<a {{bind-attr class=":label option.Added:label-success:label-default "}} {{action 'addto' this.record option}}>
		{{option.Display}}
	</a>
{{/each}}
    </div>
</div>