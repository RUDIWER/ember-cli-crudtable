
<div class="form-group">
    <label class="col-sm-2 control-label">{{record.Label}}</label>
    <div class="col-sm-10">
        {{#each this.record.Display key="@index" as |option index|}}
	<a class="label {{if option.Added 'label-success' 'label-default'}}" {{action 'addto' this.record option}}>
		{{option.Display}}
	</a>
{{/each}}
    </div>
</div>