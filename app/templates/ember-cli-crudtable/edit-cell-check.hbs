<div class="form-group">
    <label class="col-sm-2 control-label">{{record.Field}}</label>
    <div class="col-sm-10">
        {{#if record.Value}}
        	<div class="check-mochileros">
				<input checked type="checkbox" id="{{record.Field}}" name="check" {{action 'generic_callback' 'check' record.RoutedRecord}}/>
				<label for="{{record.Field}}"></label>
			</div>
		{{else}}
			<div class="check-mochileros">
				<input type="checkbox" id="{{record.Field}}" name="check" {{action 'generic_callback' 'check' record.RoutedRecord}}/>
				<label for="{{record.Field}}"></label>
			</div>
        {{/if}}
    </div>
</div>