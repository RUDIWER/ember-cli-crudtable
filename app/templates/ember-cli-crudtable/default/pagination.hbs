<div class="row text-center">
    <div class="btn-group">
        <button {{action 'goto' model.pagination.previous}} {{bind-attr class="model.pagination.previous::disabled :btn :btn-page" }} type="button">Previous</button>
        {{#each page in model.pagination.links}}
        <button {{bind-attr data-page=page.page}} {{action 'goto' page.page}} {{bind-attr class=":btn page.current:btn-primary:btn-page" }} type="button">
            {{page.page}}
        </button>
        {{/each}}
        <button {{action 'goto' model.pagination.next}} {{bind-attr class="model.pagination.next::disabled :btn :btn-page" }} type="button">Next</button>
    </div>
</div>