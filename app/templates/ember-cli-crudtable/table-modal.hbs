<div class="modal inmodal fade" id="CrudTableDeleteRecordModal" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog {{if model.isDeleting 'modal-sm'}}">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">
                    {{#if model.newRecord}}
                        Add a New Record
                    {{else}}
                        {{#if model.isDeleting}}
                            You're about to delete a record
                        {{else}}
                            {{#if model.showMap}}
                                Location
                            {{else}}
                                Updating
                            {{/if}}

                        {{/if}}
                    {{/if}}
                </h4>
            </div>
            <div class="modal-body">
                {{#if model.newRecord}}
                    {{render 'ember-cli-crudtable/table-update' model.currentRecord}}
                {{else}}
                    {{#if model.isDeleting}}
                        Deleting the record: <b>{{model.currentRecord.0.Value}}</b> is a permanent action.
                    {{else}}
                        {{#if model.showMap}}
                            {{render 'ember-cli-crudtable/modal-googlemap' model.currentRecord}}
                        {{else}}
                            {{render 'ember-cli-crudtable/table-update' model.currentRecord}}
                        {{/if}}
                    {{/if}}
                {{/if}}
            </div>
            <div class="modal-footer">
                {{#unless model.isLoading}}
                <button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn {{if model.isDeleting 'btn-danger' 'btn-primary'}}" data-action="confirm" {{action 'confirm' this}}>
                    {{#if model.isDeleting}}
                        Delete
                    {{else}}
                        {{#if model.showMap}}
                            Caputure Location
                        {{else}}
                            Save
                        {{/if}}

                    {{/if}}
                </button>
                {{else}}
                    {{#if model.showMap}}
                        {{render 'ember-cli-crudtable/table-googlemap' model.currentRecord}}
                    {{else}}
                        {{render 'ember-cli-crudtable/spinner' model.isLoading}}
                    {{/if}}

                {{/unless}}
            </div>
        </div>
    </div>
</div>
